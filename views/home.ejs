<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Database Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="/css/home.css" />
  <style>
    body {
      padding: 10px;
    }

    .main-content {
      margin: 30px;
    }
  </style>
</head>

<body>
  <!-- Navbar Start -->
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <span class="navbar-text">
        <h4>Database</h4>
      </span>
    </div>
  </nav>
  <!-- Navbar End -->
  <div class="main-content">
    <a class="btn btn-primary mb-5 mt-2" href="./addData" role="button"><i class="bi bi-send-plus"> </i>Tambah Data</a>
    <!-- Table Start -->
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama</th>
          <th scope="col">Alamat</th>
          <th scope="col">Lihat Data</th>
          <th scope="col">Hapus Data</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i<database.length; i++){ %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= database[i].nama %></td>
          <td><%= database[i].alamat %></td>
          <td>
            <a class="btn btn-primary btn-sm" href="/home/<%= database[i].nama %>" role="button">Click Here!!</a>
          </td>
          <td>
            <a class="btn btn-danger btn-sm" href="/home/delete/<%= database[i].nama%>" role="button" onclick="confirm('Apakah Anda yakin untuk menghapus data ini?')">Click Here!!</a>
          </td>
        </tr>
        <% }; %>
      </tbody>
    </table>
    <!-- Table End -->
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>